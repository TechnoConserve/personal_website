upstream app {
  server ave-web:9000;
}

server {
    listen 80;
    server_name ${IP_ADDR};

    location /static {
        alias /app/static;
    }

    location /media {
        alias /app/media;
    }

    location / {
        proxy_pass http://app;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

}